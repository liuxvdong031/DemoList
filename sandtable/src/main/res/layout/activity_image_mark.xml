<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageMarkActivity"
    android:orientation="vertical">

    <com.xvdong.sandtable.taglibrary.view.ImageMarkLayout
        android:id="@+id/idl_idl_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:text="1"
        android:onClick="moveto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="2"
        android:onClick="moveto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="3"
        android:onClick="moveto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="4"
        android:onClick="moveto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
